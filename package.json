{
  "name": "ai-capabilities-suite",
  "version": "0.0.1",
  "description": "AI Capability Extension Suite - MCP servers for AI agent capabilities",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "lint": "nx run-many -t lint",
    "build:binaries": "npm run build && node scripts/build-binaries.js",
    "changelog": "node scripts/generate-changelog.js",
    "publish:core": "cd packages/mcp-debugger-core && npm publish --access public",
    "publish:server": "cd packages/mcp-debugger-server && npm publish --access public",
    "publish:debugger": "npm run publish:core && npm run publish:server",
    "publish:debugger:check": "npm run build && npm run test && npm run publish:debugger"
  },
  "devDependencies": {
    "@nx/jest": "^22.1.3",
    "@nx/node": "^22.1.3",
    "@swc/helpers": "^0.5.17",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "nx": "^22.1.3",
    "pkg": "^5.8.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "zod": "^4.1.13"
  }
}
